<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SisPasaIntPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.pasa.sispasaint.config.DadosConfig</class>
    <class>org.pasa.sispasaint.model.Beneficiario</class>
    <class>org.pasa.sispasaint.model.DadosBancarios</class>
    <class>org.pasa.sispasaint.model.Documento</class>
    <class>org.pasa.sispasaint.model.Endereco</class>
    <class>org.pasa.sispasaint.model.Estado</class>
    <class>org.pasa.sispasaint.model.Funcionario</class>
    <class>org.pasa.sispasaint.model.GrauParentesco</class>
    <class>org.pasa.sispasaint.model.Municipio</class>
    <class>org.pasa.sispasaint.model.Pessoa</class>
    <class>org.pasa.sispasaint.model.Telefone</class>
    <class>org.pasa.sispasaint.model.intg.ModeloBenExt</class>
    <class>org.pasa.sispasaint.model.intg.ModeloBenPeople</class>
    <class>org.pasa.sispasaint.model.intg.ModeloBenVLI</class>
    <class>org.pasa.sispasaint.model.intg.ModeloEndExt</class>
    <class>org.pasa.sispasaint.model.intg.ModeloEndPeople</class>
    <class>org.pasa.sispasaint.model.intg.ModeloEndVLI</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:jtds:sqlserver://127.0.0.1:1433;instance=PASA;DatabaseName=sispasaint"/>
      <property name="javax.persistence.jdbc.user" value="sispasa"/>
      <property name="javax.persistence.jdbc.driver" value="net.sourceforge.jtds.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="sispasa"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>
